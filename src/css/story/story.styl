/* CUSTOM STORY STYLE */

body
    background #0D1730
    color #ffffff
    font-family "Rubik"

h1, h2, .intro__byline, time
    font-family "Noto Serif"

h1
    font-size 4em
    text-shadow:  0px 0px 10px #000000

.intro
    background-image url("assets/images/star2.png")
    background-position center
    background-repeat no-repeat
    background-size: cover

.intro__dek
    max-width 50rem
    font-size 1.5em
    text-shadow: 0px 0px 2px #000000

.intro__byline, .intro__time
    color #ffffff
    font-family Roboto
    font-weight 100

.intro__time
    margin-top 0
    margin-bottom 3rem

.intro__byline a
    color #ffffff
    text-decoration underline
    text-decoration-color #ffffff

.intro__logo
    margin auto
    text-align center

/* RANKING */
#ranking-container
    width 100%

svg#ranking text
    fill #ffffff

/* RANKING BEFORE FINAL*/
.label-tele, .label-overall, .connection
    opacity 0.2

