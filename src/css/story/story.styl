.stv-radio-buttons-wrapper {
  clear: both;
  display: inline-block;
}

.stv-radio-button {
    position: absolute;
    visibility: hidden;
  
  & + label {
    font-size: 0.7em;
    float: left;
    padding: .3em 0.5em;
    cursor: pointer;
    border: 1px solid #28608f;
    margin-right: -1px;
    color: #fff;
    background-color: #428bca;
    
    &:first-of-type {
      border-radius: .2em 0 0 .2em;
    }
    
    &:last-of-type {
      border-radius: 0 .2em .2em 0;
    }
  }
  
  &:checked + label {
    background-color: #3277b3;
  }
}

#map-container svg, #scatteryearly-container svg, #votingpattern-container svg
    display block
    margin auto

.country
    stroke-width 1
    stroke #868A97
    transition stroke 5s linear
    
.country.highlight
    stroke-width 2
    stroke #ffffff
    transition stroke 5s linear

.map-label
    font-size 0.7em
    fill white

/* SCATTERPLOT*/
#scatter-container svg
    display block
    margin auto

.circle-mean
    fill #ffffff
    opacity 0.7

.circle-year
    fill #ffffff
    opacity 0.5

.circle-year.highlight
    animation-name pop
    animation-duration 1s
    animation-fill-mode forwards
    animation-timing-function ease-out

.circle-pattern
    fill #ffffff
    opacity 0.7

@keyframes pop {
  from {
    opacity: 0.5
    r: 2
  }
  to {
    opacity: 1
    r: 8
  }
}

.axis line
    opacity 0.1
.axis path
    visibility hidden
.axis text
    font-family Rubik
.axis-title
    fill #ffffff
    font-size 14px
    font-family Rubik
.x.axis-title 
    text-anchor end

.fourtyfive
    stroke #ffffff
    stroke-width 2
    opacity 0.5

.scatter-label
    text-anchor middle
    fill #ffffff
    font-size 10px
    opacity 0.8
