/*MAP*/
/*BUTTONS*/

#map-controls
    display table
    margin-top 2em
    margin-bottom 2em

.stv-radio-buttons-wrapper {
    clear: both;
    display: table-cell;
    vertical-align: middle;
    padding-left 6px
    padding-right 6px
}

.map-control-text
    display inline-block
    vertical-align middle
    display table-cell
    vertical-align middle

.stv-radio-button {
    position: absolute;
    visibility: hidden;
  
  & + label {
    font-size: 0.8em;
    /*float: left;*/
    display: block;
    padding: .3em 0.5em;
    cursor: pointer;
    /*border: 1px solid #FFFFFF;*/
    margin-right: -1px;
    color: #fff;
    background-color: #B29A81;
    text-align: center;
    /*box-shadow: 0px 0px 2px rgba(255, 255, 255, 1);*/
    
    &:first-of-type {
      border-radius: 0.2em .2em 0 0;
      border-bottom: 1px solid #FFFFFF;
    }
    
    &:last-of-type {
      border-radius: 0 0 .2em .2em;
    }
  }
  
  &:checked + label {
    background-color: #67594B;
    box-shadow: inset 0px 0px 4px rgba(0, 0, 0, 1);
    cursor: default;
  }
}

#countrylist
    width 120px

/*Legend*/
#map-legend {
  display: table;
  margin: 0 auto;
}

.legend-item {
  font-family: "Roboto", serif;
  padding-top: 6px;
  padding-bottom: 6px;
  float: left;
  width: 36px;
  border: 1px white solid;
  border-right-style: none;
  text-align: center;
}
.legend-item.twelve {
    color: #555555;
  }

@media (max-width: 768px){
  .legend-item {
    width: 26px;
    border: 1px white solid;
  }
  .legend-item.twelve {
    border-right: 2px white solid;
  }
}

