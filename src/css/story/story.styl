/* CUSTOM STORY STYLE */

body
    background #0D1730
    color #ffffff
    font-family "Rubik"

h1, h2, .intro__byline, time
    font-family "Noto Serif"

h1
    font-size 4em

.intro__dek
    max-width: 50rem;
    font-size 1.3em

.intro__byline a
    color #B18F6D

/* RANKING */
svg#ranking text
    fill #ffffff

/* RANKING BEFORE FINAL*/
.label-tele, .label-overall, .connection
    opacity 0.2

/* SCATTERPLOT*/
#scatter-container svg
    display block
    margin auto

.circle-mean
    fill #ffffff
    opacity 0.7

.axis line
    opacity 0.1
.axis path
    visibility hidden
.axis text
    font-family Rubik
.axis-title
    fill #ffffff
    font-size 14px
    font-family Rubik
.x.axis-title 
    text-anchor end

.fourtyfive
    stroke #ffffff
    stroke-width 2
    opacity 0.5

.scatter-label
    text-anchor middle
    fill #ffffff
    font-size 10px
    opacity 0.8
