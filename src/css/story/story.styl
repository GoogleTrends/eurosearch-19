    stroke-width 1

.annotation-note-label
  font-size 0.7em
  text-shadow none

.fourtyfive
  stroke-dasharray 2
  stroke-dashoffset 8
  stroke #ffffff
  stroke-width 1
  opacity 0.7
  animation: stroke 1s linear infinite;

@keyframes stroke {
  to {
    stroke-dashoffset: 0;
  }
}

circle.winner, .circle-winner-legend
  fill none
  stroke-dasharray 4
  stroke-dashoffset 8
  stroke #ffffff
  stroke-width 1
  animation: stroke 1.5s linear infinite;

div.tooltip 	
